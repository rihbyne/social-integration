                            <li><a href="#12">#india</a><span>26.7K Tweets</span></li>
                        </ul>
                    </div>
                </div>
                <!-- END left div -->
                <div class="col s12 m4 l6 Hash_wrap">
                    <div class="row">
                        <form class="col s12">
                            <div class="row">
                                <div class="col s12">
                                    <ul class="tabs">
                                        <li class="tab col s3"><a class="active" href="#test1">Top</a></li>
                                        <li class="tab col s3"><a href="#test2">Videos
                                        </a></li>
                                        <li class="tab col s3 "><a href="#test3">Live
                                        </a></li>
                                        <li class="tab col s3"><a href="#test4">Images
                                        </a></li>
                                    </ul>
                                </div>
                                <div id="test1" class="col s12">
                                    <ul class="collection social_post">
                                        <% hashtags.forEach(function(hashtagelement){ %>
                                            <li class="collection-item avatar">
                                                <img src="../../images/pro_01.jpg" alt="" class="circle">
                                                <a href="#as"><b class="fullname">Damon Jernstad</b></a><a href="#" class="u_id">@sudeep_dk</a><a href="#" class="post-time">4hr</a><br>
                                                <small>
                                                Followed by <a href="#12"><b>Leonel</b></a> and <a href="#" class=""><b>others</b></a>
                                                </small>
                                                <p><%= hashtagelement.post_id.post_description %>               </p>
                                                    <div class="card-action">
                                                        <a href="#" class="btn-reply tooltipped" data-position="top" data-delay="50" data-tooltip="reply"><i class="fa fa-reply"></i></a>
                                                        <a href="#" class="btn-retweet tooltipped" data-position="top" data-delay="50" data-tooltip="retweet"> <i class="fa fa-retweet"></i></a>
                                                        <a href="#" class="btn-like tooltipped" data-position="top" data-delay="50" data-tooltip="like"><i class="fa fa-heart"></i></a>
                                                        <!-- Dropdown Trigger -->
                                                        <a class='dropdown-button right' href='#' data-activates='dropdown1'><i class="fa fa-ellipsis-h"></i></a>
                                                        <!-- Dropdown Structure -->
                                                        <ul id='dropdown1' class='dropdown-content'>
                                                            <li><a href="#!">Share via Direct Message</a></li>
                                                            <li><a href="#!">Copy link to Tweet</a></li>
                                                            <li><a href="#!">Embed Tweet</a></li>
                                                            <li><a href="#!">Pin to your profile page</a></li>
                                                            <li><a href="#!">Unpin from profile page</a></li>
                                                            <li><a href="#!">Delete Tweet</a></li>
                                                        </ul>
                                                    </div>
                                                </li>
                                            <% }) %>
                                        </ul>
                                            </div>
                                            <div id="test2" class="col s12">Test 2</div>
                                            <div id="test3" class="col s12">Test 3</div>
                                            <div id="test4" class="col s12">Test 4</div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <!-- center div post  -->
                            <div class="col s12 m4 l3">
                                <a href="#">Who to follow</a>
                                <a href="#1" class="right">view all</a>
                                <ul class="collection">
                                    <li class="collection-item avatar">
                                        <img src="images/pro_01.jpg" alt="" class="circle">
                                        <a href=""><b class="fullname">Damon Jernstad</b></a><br>
                                        <small>
                                        Followed by 
                                        <a href="#12"><b>Leonel</b></a> and <a href="#" class=""><b>others</b></a>
                                        </small>
                                        <!-- <a href="../icon/user-plus"><i class="fa fa-user-plus"></i></a> -->
                                        <a href="#!" class="secondary-content"><i class="fa fa-user-plus"></i></a>
                                    </li>
                                    <li class="collection-item avatar">
                                        <img src="images/pro_02.jpg" alt="" class="circle">
                                        <a href=""><b class="fullname">Harrison Bonardi</b></a><br>
                                        <small>
                                        Followed by <a href="#12"><b>Aiko</b></a> and <a href="#" class=""><b>others</b></a>
                                        </small>
                                        <!-- <a href="../icon/user-plus"><i class="fa fa-user-plus"></i></a> -->
                                        <a href="#!" class="secondary-content"><i class="fa fa-user-plus"></i></a>
                                    </li>
                                    <li class="collection-item avatar">
                                        <img src="images/pro_03.jpg" alt="" class="circle">
                                        <a href=""><b class="fullname">Linnie Escalona</b></a><br>
                                        <small>
                                        Followed by <a href="#12"><b>Collette</b></a> and <a href="#" class=""><b>others</b></a>
                                        </small>
                                        <!-- <a href="../icon/user-plus"><i class="fa fa-user-plus"></i></a> -->
                                        <a href="#!" class="secondary-content"><i class="fa fa-user-plus"></i></a>
                                    </li>
                                </ul>
                            </div>
                            <!-- right div suggesion , footer -->
                        </div>
                    </div>
                    <!-- Modal Trigger -->
                    <a href="#modal1" class=" modal-trigger btn-floating btn-large waves-effect waves-light red btn-tw-st"><i class="material-icons">add</i></a>
