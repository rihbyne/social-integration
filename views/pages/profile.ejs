<!-- views/pages/index.ejs -->
<!DOCTYPE html>
<html lang="en">
    <head>
        <% include ../partials/head %>
    </head>
    <body>
        <header>
            <% include ../partials/header %>
        </header>
        <div  class="container big">
            <div class="row bg-color">
                <div class="col s12 m12 l3">
                    <div class="card">
                        <div class="card-image waves-effect waves-block waves-light">
                            <img class="activator" src="images/CeoXGIuWQAAtrZN.JPG">
                        </div>
                        <div class="card-content">
                            <img src="images/pro_01.jpg" alt="" class="circle user_pro_p">
                            <span class="card-title activator grey-text text-darken-4"><%= user.first_name %> <%= user.last_name%><i class="material-icons right">more_vert</i></span>
                            <p></p>
                            <p><a href="#">@<%= user.username %></a></p>
                        </div>
                        <div class="card-reveal">
                            <span class="card-title grey-text text-darken-4"><%= user.first_name %> <%= user.last_name%></b><i class="material-icons right">close</i></span>
                            <p>I strongly believe that we can change our country's fate we r the future of our country.Full stack programmer. <a href="http://sudeepdk.com ">http://sudeepdk.com</a></p>
                        </div>
                        <div class="card-action t-count">
                            <ul>
                                <li><a href="">tweet<span><%= userdetails.tweetcount[0].count %></span></a></li>
                                <li><a href="">Following<span>36</span></a></li>
                                <li><a href="">Follower<span>74</span></a></li>
                            </ul>
                        </div>
                    </div>
                    
                    <% include ../partials/trend %>
                </div>
                <!-- END left div -->
                <div class="col s12 m12 l6">
                    <div class="row">
                        <p>
                            <strong>id</strong>: <%= user._id %><br>
                            <strong>email</strong>: <%= user.email %><br>
                            <strong>password</strong>: <%= user.password %><br>
                            <strong>password</strong>: <%= user.first_name %><br>
                            <strong>password</strong>: <%= user.last_name %><br?
                        </p>
                        <!-- <a href="/logout" class="btn btn-default btn-sm">Logout</a> -->
                        <form class="col s12">
                            <div class="row">
                                <div class="col s12">
                                    <ul class="tabs">
                                        <li class="tab col s3"><a class="active" href="#test1">TWEETS <br><span>744</span></a></li>
                                        <li class="tab col s3"><a href="#test2">FOLLOWING
                                            <span>491</span></a></li>
                                            <li class="tab col s3 "><a href="#test3">FOLLOWERS
                                                <span>151</span></a></li>
                                                <li class="tab col s3"><a href="#test4">LIKES
                                                    <span>482</span></a></li>
                                                </ul>
                                            </div>
                                            <div id="test1" class="col s12">
                                                <ul class="collection social_post">
                                                    <% userdetails.allpost.forEach(function(userdetail, i){ %>
                                                    <li class="collection-item avatar">
                                                        <img src="images/pro_01.jpg" alt="" class="circle">
                                                        <a href=""><b class="fullname"><%= user.first_name %> <%= user.last_name%></b></a><a href="#" class="u_id">@<%= user.username %></a><a href="#" class="post-time"><%= userdetail.created_at %></a><br>
                                                        <p><%= userdetail.post_description %>
                                                        </p>
                                                        <div class="card-action">
                                                            <a href="#modalrt<%= i %>" class="modal-trigger btn-retweet">
                                                                <i class="fa fa-retweet rt-btn"></i>
                                                            </a>
                                                            <span class="rt-count"> <%= userdetail.tweet_count %></span>
                                                            <a href="#" class="btn-like"><i class="fa fa-heart"></i></a>
                                                            <a class='dropdown-button right' href='#' data-activates='dropdown<%= i %>'>
                                                            <i class="fa fa-ellipsis-h"></i></a>
                                                            <!-- Dropdown Structure -->
                                                            <ul id='dropdown<%= i %>' class='dropdown-content'>
                                                                <li><a href="#!">Share via Direct Message</a></li>
                                                                <li><a href="#!">Copy link to Tweet</a></li>
                                                                <li><a href="#!">Embed Tweet</a></li>
                                                                <li><a href="#!">Pin to your profile page</a></li>
                                                                <li><a href="#!">Unpin from profile page</a></li>
                                                                <li><a href="#!">Delete Tweet</a></li>
                                                            </ul>
                                                        </div>
                                                    </li>
                                                    <% }) %>
                                                    
                                                </ul>
                                            </div>
                                            <div id="test2" class="col s12">Test 2</div>
                                            <div id="test3" class="col s12">Test 3</div>
                                            <div id="test4" class="col s12">Test 4</div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <!-- center div post  -->
                            <div class="col s12 m12 l3">
                                <a href="#">Who to follow</a>
                                <a href="#1" class="right">view all</a>
                                <ul class="collection">
                                    <li class="collection-item avatar">
                                        <img src="images/pro_01.jpg" alt="" class="circle">
                                        <a href=""><b class="fullname">Damon Jernstad</b></a><br>
                                        <small>
                                        Followed by <a href="#12"><b>Leonel</b></a> and <a href="#" class=""><b>others</b></a>
                                        </small>
                                        <!-- <a href="../icon/user-plus"><i class="fa fa-user-plus"></i></a> -->
                                        <a href="#!" class="secondary-content"><i class="fa fa-user-plus"></i></a>
                                    </li>
                                    <li class="collection-item avatar">
                                        <img src="images/pro_02.jpg" alt="" class="circle">
                                        <a href=""><b class="fullname">Harrison Bonardi</b></a><br>
                                        <small>
                                        Followed by <a href="#12"><b>Aiko</b></a> and <a href="#" class=""><b>others</b></a>
                                        </small>
                                        <!-- <a href="../icon/user-plus"><i class="fa fa-user-plus"></i></a> -->
                                        <a href="#!" class="secondary-content"><i class="fa fa-user-plus"></i></a>
                                    </li>
                                    <li class="collection-item avatar">
                                        <img src="images/pro_03.jpg" alt="" class="circle">
                                        <a href=""><b class="fullname">Linnie Escalona</b></a><br>
                                        <small>
                                        Followed by <a href="#12"><b>Collette</b></a> and <a href="#" class=""><b>others</b></a>
                                        </small>
                                        <!-- <a href="../icon/user-plus"><i class="fa fa-user-plus"></i></a> -->
                                        <a href="#!" class="secondary-content"><i class="fa fa-user-plus"></i></a>
                                    </li>
                                </ul>
                            </div>
                            <!-- right div suggesion , footer -->
                        </div>
                    </div>
                    <!-- Modal Trigger -->
                    <a href="#modal1" class=" modal-trigger btn-floating btn-large waves-effect waves-light red btn-tw-st"><i class="material-icons">add</i></a>
                    <!-- <a class="waves-effect waves-light btn modal-trigger" href="#modal1">Modal</a> -->
                    <!-- Modal Structure -->
                    <div id="modal1" class="modal">
                        <div class="modal-content">
                            <div class="row">
                                <form method="post" action="/secure/setnewpost" name="compose_post">
                                    <input type="hidden" name="username" value="<%= user.username %>">
                                    <h5 class="center-align">Compose a new Post</h5>
                                    <div class="input-field col s12 mb-10">
                                        <!-- <input type="text" name="post_title" value=""> -->
                                        <textarea id="textarea1" name="post_description" placeholder="what's happening?" class="materialize-textarea" length="350"></textarea>
                                        <label for="textarea1"></label>
                                    </div>
                                    <div class="fixed-action-btn horizontal click-to-toggle">
                                        <a class="btn-floating btn-large red">
                                            <i class="large mdi-navigation-menu"></i>
                                        </a>
                                        <ul>
                                            <li><a class="btn-floating red"><i class="material-icons">insert_chart</i></a></li>
                                            <!-- <li><a class="btn-floating yellow darken-1"><i class="material-icons">format_quote</i></a></li> -->
                                            <li><a class="btn-floating green"><i class="material-icons">publish</i></a></li>
                                            <li><a class="btn-floating blue"><i class="material-icons">attach_file</i></a></li>
                                            <li><button class="btn-floating yellow"><i class="material-icons">library_add</i>
                                            </button></li>
                                            <!--   <li><a ><i class="material-icons btn-ico">library_add
                                            </i> <input class="btn-floating yellow darken-1"  type="submit" value=''></a>
                                        </li> -->
                                    </ul>
                                </div>
                                
                            </form>
                        </div>
                    </div>
                    <!--                                     <div class="modal-footer">
                        <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">Agree</a>
                    </div>
                -->                                </div>
                <footer>
                    <% include ../partials/footer %>
                </footer>
                
            </body>
        </html>